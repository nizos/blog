<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{ title }}</title>
    </head>
    <body>
        {% include 'header' %}
        <div>
            <h1>{{ title }}</h1>
            <div>
                <p>{{ date | readableDate }} | {{ content | timeToRead }}</p>
                {% assign filteredTags = tags | postTags %}
                <p>{% for tag in filteredTags %}
                    {% capture tagUrl %}/tags/{{ tag }}/{% endcapture %}
                    <a href="{{ tagUrl | url }}">#{{ tag }}</a>
                {% endfor %}</p>
            </div>
        </div>
        <div>{{ content }}</div>
        {% include 'footer' %}
    </body>
</html>
