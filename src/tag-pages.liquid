---
layout: layouts/base.liquid
permalink: /tags/{{ tag | slugify }}/
pagination:
  data: collections
  size: 1
  alias: "tag"
  filter: ["all", "posts"]
  addAllPagesToCollections: true
eleventyComputed:
  title: "Posts tagged #{{ tag }}"
  tag: "{{ tag }}"
---
<h1>Nizar's Blog</h1>
<h2>{{ title }}</h2>
{% assign posts = collections.posts | filterByTag: tag %}
{% include "components/posts-list.liquid" %}
